<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shamshad.foodorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sign_in"
            android:noHistory="true" />
        <activity
            android:name=".sign_up"
            android:noHistory="true" />
        <activity android:name=".restaurant" />
        <activity android:name=".foodList" />
        <activity android:name=".fooddetails" />
        <activity android:name=".cart" />
        <activity android:name=".account_details" />
        <activity android:name=".address" />
        <activity android:name=".address_selection" />
        <activity android:name=".order_details" />
        <activity android:name=".PaymentDetails" />
        <activity android:name=".payment_selection" />
        <activity android:name=".paymentDetails_cod" />
        <activity android:name=".order" />
        <activity android:name=".requestList"></activity>
    </application>

</manifest>