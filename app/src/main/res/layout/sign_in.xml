<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.shamshad.foodorder.sign_in">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/email_signin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/rounded_edittext_button"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="12dp"
        android:ems="14"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/signin1" />

    <EditText
        android:id="@+id/password_signin"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/email_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="14"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:background="@drawable/rounded_edittext_button"
        android:textColor="@color/Black"
        android:inputType="textPassword"
        android:textColorHint="@color/Black" />

    <Button
        android:id="@+id/signin1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="@drawable/rounded_button"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/signin_google"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_button_google"
        android:text="Signin with Google"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_google"
        android:textColor="@color/White"
        android:paddingLeft="10dp"
        android:layout_below="@+id/signin1"
        android:layout_alignEnd="@+id/password_signin" />

    <TextView
        android:id="@+id/create_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:text="Not a member?Sign up now."
        android:layout_marginEnd="54dp"
        android:layout_below="@+id/signin_google"
        android:layout_alignEnd="@+id/signin1"
        android:layout_marginTop="31dp" />



</RelativeLayout>
