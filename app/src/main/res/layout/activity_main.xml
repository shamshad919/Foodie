<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="27dp"
                app:srcCompat="@drawable/logo"
                android:layout_above="@+id/limestone"
                android:layout_centerHorizontal="true" />
        </LinearLayout>


        <TextView
            android:id="@+id/limestone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Foody"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear_main"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/Beige"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just a better delivery service"
            android:textSize="25sp"
            android:textColor="@color/Yellow"
            android:layout_below="@+id/limestone"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/signin_main"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodorder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/signup_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Create an account"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textColor="@color/White"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
