<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.firefistace.shamshad.foodorder.sign_up">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />

        <EditText
            android:id="@+id/name_signup"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/signup"
            android:layout_marginTop="101dp"
            android:background="@drawable/rounded_edittext_button"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="12dp"
            android:ems="14"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Black" />

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/name_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext_button"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="12dp"
            android:ems="14"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Black" />


        <EditText
            android:id="@+id/password_signup"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/email_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext_button"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="12dp"
            android:ems="14"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Black" />

        <EditText
            android:id="@+id/repassword_signup"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/password_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext_button"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="12dp"
            android:ems="14"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Black" />

        <Button
            android:id="@+id/signup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/repassword_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/signup_google_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button_google"
            android:drawableLeft="@drawable/ic_google"
            android:paddingLeft="10dp"
            android:text="Signup with Google"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:layout_below="@+id/signup"
            android:layout_alignEnd="@+id/name_signup"
            android:layout_marginTop="27dp" />

        <TextView
            android:id="@+id/signin_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Registered ? Click here!"
            android:textColor="@color/White"
            android:layout_below="@+id/signup_google_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
