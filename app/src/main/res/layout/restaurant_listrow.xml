<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/restaurant_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/restaurant_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_toEndOf="@+id/cardview_restaurant"
        android:paddingLeft="10dp"
        android:text="Android"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/rating_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/restaurant_textview"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/ima"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="4"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:layout_alignBottom="@+id/rating_restaurant"
        android:layout_toStartOf="@+id/rating_restaurant"
        android:src="@drawable/ic_star_black_24dp" />

</RelativeLayout>