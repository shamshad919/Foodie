<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_restaurant"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/restaurant_imageview"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/restaurant_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="Android"
            android:layout_below="@id/restaurant_imageview"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rating_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/restaurant_textview"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="4"
            android:textColor="@color/Black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/rating_restaurant"
            android:layout_toStartOf="@+id/rating_restaurant"
            android:src="@drawable/ic_star_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>