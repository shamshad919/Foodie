<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firefistace.shamshad.foodorder.payment_selection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/select_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:text="Select a Payment"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/paypal_logo"
            android:layout_width="150dp"
            android:background="@color/whitetransparent"
            android:layout_height="150dp"
            android:src="@drawable/paypal_logo"
            android:layout_below="@+id/select_payment"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:layout_below="@+id/paypal_logo"
            android:layout_marginLeft="70dp"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_marginTop="20dp"
            android:id="@+id/paypal_text" />

        <ImageButton
            android:id="@+id/cash_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cash_logo"
            android:scaleType="fitCenter"
            android:background="@drawable/trans_white_rectangle"
            android:layout_alignTop="@+id/paypal_logo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash on Delivery"
            android:textSize="20sp"
            android:id="@+id/cash_text"
            android:textColor="@color/Black"
            android:layout_alignBaseline="@+id/paypal_text"
            android:layout_alignBottom="@+id/paypal_text"
            android:layout_alignStart="@+id/cash_logo" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
